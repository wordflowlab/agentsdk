@tailwind base;
@tailwind components;
@tailwind utilities;

/* 自定义样式 */
:root {
  --primary-color: #10b981;
  --secondary-color: #3b82f6;
}

.dark {
  --primary-color: #34d399;
  --secondary-color: #60a5fa;
}

/* 代码块样式优化 */
pre {
  @apply overflow-x-auto p-4 rounded-lg my-4;
  background-color: #1e1e1e !important;
  border: 1px solid #3e3e3e;
}

.dark pre {
  background-color: #1e1e1e !important;
  border: 1px solid #3e3e3e;
}

pre code {
  @apply block;
  font-size: 14px;
  line-height: 1.6;
  font-weight: 400;
  color: #d4d4d4 !important;
}

.dark pre code {
  color: #d4d4d4 !important;
}

/* 代码高亮颜色 - VSCode Dark+ 风格（柔和舒适） */
pre code span[style*="color"] {
  color: inherit !important;
}

/* 关键字 - 柔和的蓝色 */
pre code .line span:nth-child(1),
pre code span:is([class*="keyword"], [class*="import"], [class*="package"], [class*="func"], [class*="var"], [class*="const"], [class*="type"], [class*="return"]) {
  color: #569cd6 !important;
}

/* 字符串 - 柔和的橙棕色 */
pre code span:is([class*="string"], [class*="char"]) {
  color: #ce9178 !important;
}

/* 函数名 - 柔和的黄色 */
pre code span:is([class*="function"], [class*="method"]) {
  color: #dcdcaa !important;
}

/* 数字 - 柔和的浅绿色 */
pre code span:is([class*="number"], [class*="int"], [class*="float"]) {
  color: #b5cea8 !important;
}

/* 注释 - 柔和的绿色 */
pre code span:is([class*="comment"]) {
  color: #6a9955 !important;
  font-style: italic !important;
}

/* 类型/类名 - 柔和的青色 */
pre code span:is([class*="class"], [class*="type"], [class*="interface"]) {
  color: #4ec9b0 !important;
}

/* 布尔值和null - 柔和的蓝色 */
pre code span:is([class*="boolean"], [class*="true"], [class*="false"], [class*="nil"], [class*="null"]) {
  color: #569cd6 !important;
}

/* 运算符和标点 - 浅灰 */
pre code span:is([class*="operator"], [class*="punctuation"]) {
  color: #d4d4d4 !important;
}

/* 属性 - 柔和的浅蓝色 */
pre code span:is([class*="property"], [class*="field"]) {
  color: #9cdcfe !important;
}

/* 内置函数 - 柔和的紫色 */
pre code span:is([class*="builtin"]) {
  color: #c586c0 !important;
}

/* 深色模式使用相同配色 */
.dark pre code span[style*="color"] {
  color: inherit !important;
}

/* 链接样式 */
a {
  @apply text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300;
}

/* 标题锚点 */
h1, h2, h3, h4, h5, h6 {
  @apply scroll-mt-20;
}

/* 导航激活状态 */
.nav-link-active {
  @apply font-semibold text-primary-600 dark:text-primary-400;
}
